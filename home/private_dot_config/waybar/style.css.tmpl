@import "./theme.css";

* {
  border: none;
  border-radius: 0;
  font-family: "{{ .font_regular }}";
  font-size: {{ .font_size }}px;
}

window#waybar {
  background: @surface;
  color: @text;
}

tooltip {
  background: @overlay;
}
tooltip label {
  color: @rose;
}

#workspaces button {
  font-size: {{ add .font_size 3 }}px;
  padding: 0 10px;
  background: transparent;
  color: @muted;
  border-bottom: 2px solid @subtle;
}

#workspaces button.active {
  border-bottom: 2px solid @gold;
}

#mode, #clock, #battery {
    padding: 0 10px;
}
