/* WORK IN PROGRESS */

@import "./theme.css";

* {
  border: none;
  border-radius: 0;
  font-family: "{{ .font_regular }}";
  font-size: {{ .font_size }}px;
  background: @base;
  color: @text;
}

window#waybar {
  background: @pine;
  border-bottom: 3px solid @gold;
  color: @gold;
}

tooltip {
  background: @overlay;
}
tooltip label {
  color: @pine;
  background: @overlay;
}

#workspaces button {
  font-size: {{ add .font_size 2 }}px;
    padding: 0 10px;
    color: @muted;
    border-bottom: 3px solid transparent;
}

#workspaces button.active {
    border-bottom: 3px solid @gold;
}

