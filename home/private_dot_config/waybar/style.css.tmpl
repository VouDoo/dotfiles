@import "./theme.css";

* {
  border: none;
  border-radius: 0;
  font-family: "{{ .font_regular }}";
  font-size: 16px;
  background: transparent;
}

window#waybar {
  background: @surface;
  color: @text;
}

tooltip {
  background: @overlay;
}
tooltip label {
  color: @rose;
}

#workspaces button {
  padding: 0 10px;
  background: transparent;
  color: @muted;
  font-size: 30px;
  border-bottom: 2px solid @subtle;
}
#workspaces button.active {
  border-bottom: 2px solid @gold;
}

#window {
  padding: 0 10px;
  color: @text;
}

#clock {
  padding: 0 30px;
  color: @gold;
}

#backlight {
  padding: 0 15px;
}

#wireplumber {
  padding: 0 15px;
}
#wireplumber.muted {
  background: @rose;
  color: @love;
}

#network {
  padding: 0 20px;
}
#network.wifi {
  background: @pine;
}
#network.ethernet {
  background: @foam;
}
#network.disconnected {
  background: @rose;
  color: @love;
}

#cpu {
  padding: 0 20px;
  background: @highlightLow;
}

#memory {
  padding: 0 20px;
  background: @highlightLow;
}

#battery {
  padding: 0 12px;
}
