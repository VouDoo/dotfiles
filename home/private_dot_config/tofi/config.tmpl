{{- $theme := (include ".theme.toml" | fromToml) -}}
font = {{ .font_mono }}
font-size = {{ add 1 .font_size }}
font-features = "smcp, c2sc"

text-color = {{ $theme.colors.text }}

prompt-color = {{ $theme.colors.primary }}

placeholder-color = {{ $theme.colors.muted }}

input-color = {{ $theme.colors.primary }}DD

selection-color = {{ $theme.colors.accent }}
selection-background = {{ $theme.colors.surface }}
selection-background-padding = 2

text-cursor-style = block
text-cursor-color = {{ $theme.colors.accent }}DD

prompt-text = " >> "
prompt-padding = 10
placeholder-text = "  Type to search..."
result-spacing = 4
horizontal = false

width = 16%
height = 22%
background-color = {{ $theme.colors.surface }}CC
outline-width = 2
outline-color = {{ $theme.colors.primary }}
border-width = 0

padding-top = 30
padding-bottom = 30
padding-left = 20
padding-right = 20

anchor = center
text-cursor = true

